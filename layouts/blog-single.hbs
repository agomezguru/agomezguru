{{> header}}

  <nav id="breadcrumbs" class="breadcrumbs">
    <div class="container page-wrapper">
      <a href="{{ root }}/index.html">Inicio</a> / {{ category }} / <span class="breadcrumb_last"
        aria-current="page">Featured
        posts</span>
    </div>
  </nav>

  <div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
      <div class="align-items-center mb-1">
      <h3 class="blog-desc-big text-center mb-4">{{ title }}</h3>
      <div class="blog-post-align">
        <div class="blog-post-img">
          <a href="{{ root }}/pages/about/index.html"><img src="{{ root }}/assets/images/author.jpg"
              alt="Imagen del autor del blog" class="rounded-circle img-fluid" /></a>
        </div>
        <div class="blog-post-info">
          <div class="author align-items-center mb-1">
            <a href="{{ root }}/pages/about/index.html">{{ author }}</a> en <a href="#url">{{ category }}</a>
          </div>
          <ul class="blog-meta">
            <li class="meta-item blog-lesson">
              <span class="meta-value"> {{ post-date }} </span>
            </li>
            <li class="meta-item blog-students">
              <span class="meta-value"> {{ reading-time }} de lectura</span>
            </li>
          </ul>
        </div>
        </div>
      </div>
    </div>
  </div>

  <section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
      <div class="container pb-lg-4">
        <div class="single-post-image">
          <div class="post-content">
            <img src="{{ root }}/assets/images/{{ single-post-image }}" class="radius-image img-fluid mb-5" alt="" />
          </div>
        </div>
        <div class="single-post-content">

          {{{ contents }}}

          <div class="d-grid left-right mt-5 pb-md-5">
            <div class="buttons-singles tags">
              <h4>Tags :</h4>
              <a href="#blog-tag">DevOps</a>
              <a href="#blog-tag">GitHub</a>
              <a href="#blog-tag">Contenedores</a>
              <a href="#blog-tag">IA</a>
            </div>
            <div class="buttons-singles">
              <h4>Share :</h4>
              <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
              <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
              <a href="#blog-share"><span class="fa fa-linkedin" aria-hidden="true"></span></a>
            </div>
          </div>

          <!--//author-card-->
          <div class="author-card mt-5">
            <div class="row align-items-center">
              <div class="col-sm-3 col-6">
                <div>
                  <img src="{{ root }}/assets/images/author.jpg" alt="" class="rounded-circle img-fluid">
                </div>
              </div>
              <div class="col-sm-9 mt-sm-0 mt-3">
                <h3 class="mb-3 title">{{ author }}</h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident, sed et excepturi.
                  Distinctio fugit odit? Fugit ipsam. Lorem ipsum dolor sit.
                </p>
                <ul class="author-icons mt-4">
                  <li><a href="https://www.coati.com.mx" target="_blank"><span class="fa fa-globe" aria-hidden="true"></span></a></li>
                  <li><a href="https://www.linkedin.com/in/alejandro-gomez-lagunas-12748212/" target="_blank"><span class="fa fa-linkedin"
                        aria-hidden="true"></span></a></li>
                  <li><a href="https://hub.docker.com/u/agomezguru" target="_blank"><span class="fa fa-code"
                        aria-hidden="true"></span></a>
                  </li>
                <li><a href="https://github.com/agomezguru" target="_blank"><span class="fa fa-github" aria-hidden="true"></span></a>
                </li>
                </ul>
              </div>
            </div>
          </div>
          <!--//author-card-->

          <!-- related posts -->
          <div class="item mt-5 pt-lg-5">
            <h3 class="section-title-left">Maybe You are Interested in </h3>
            <div class="row">
              <div class="col-md-6">
                <div class="list-view list-view1">
                  <div class="grids5-info">
                    <a href="blog-single.html" class="d-block zoom"><img src="assets/images/4.jpg" alt=""
                        class="img-fluid radius-image news-image"></a>
                    <div class="blog-info align-self">
                      <a href="blog-single.html" class="blog-desc1">Edit/proofread your post, and
                        fix your formatting.
                      </a>
                      <div class="author align-items-center mt-3 mb-1">
